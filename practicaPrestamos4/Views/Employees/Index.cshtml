@model IEnumerable<practicaPrestamos4.Entidades.Employee>


<div class="card shadow-lg p-3 mb-5 bg-body rounded" >
    <div class="card-header">
        Lista de Empleados
    </div>
    <div class="card-body">
        <a asp-action="Create" class="btn btn-primary float-end">Nuevo empleado</a>

        <br />
        <br />
        <br />
        <table id="employeesTable" class="table table-striped dt-responsive nowrap table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Número de Nómina</th>
                    <th>Nombres</th>
                    <th>Primer apellido</th>
                    <th>Segundo apellido</th>
                    <th>Estado</th> <!-- Nueva columna para el estado -->
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.PayrollNumber</td>
                        <td>@employee.EmployeeName</td>
                        <td>@employee.EmployeeLastname1</td>
                        <td>@employee.EmployeeLastname2</td>
                        <td>
                            @{
                                // Asignar el texto correspondiente al estado
                                string estadoTexto;
                                switch (employee.EmployeeStatus)
                                {
                                    case 1:
                                        estadoTexto = "Activo";
                                        break;
                                    case 2:
                                        estadoTexto = "Con préstamo";
                                        break;
                                    case 3:
                                        estadoTexto = "Empleado dado de baja";
                                        break;
                                    default:
                                        estadoTexto = "Estado desconocido";
                                        break;
                                }
                                @estadoTexto
                            }
                        </td>
                        <td>
                            @if (employee.EmployeeStatus == 1)
                            {
                                <a asp-controller="Loans" asp-action="Create"
                                   asp-route-employeeId="@employee.EmployeeId"
                                   class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Nuevo préstamo
                                </a>
                            }
                            else if (employee.EmployeeStatus == 2)
                            {
                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#abonarModal-@employee.EmployeeId"
                                        data-loanid="@employee.Loans.FirstOrDefault()?.LoanId">
                                    Abonar
                                </button>

                                <div class="modal fade" id="abonarModal-@employee.EmployeeId" tabindex="-1" 
                                    aria-labelledby="abonarModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="abonarModalLabel">Abonar al Préstamo</h5>
                                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form asp-action="Pay" method="post">
                                                    <input type="hidden" name="loanId" id="loanId-@employee.EmployeeId" />

                                                    <div class="form-group">
                                                        <label for="amount">Cantidad a Abonar</label>
                                                        <input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0" required />
                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <button type="submit" class="btn btn-primary">Abonar</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                        {
                            
                        }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                "paging": true, // Habilitar paginación
                "searching": true, // Habilitar búsqueda
                "ordering": true, // Habilitar ordenamiento
                "info": true, // Mostrar información
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json" // Español
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            // Usar el selector correcto para Bootstrap 5
            $('button[data-bs-target^="#abonarModal"]').on('click', function () {
                console.log("Entró a la función");

                // Obtener el LoanId del botón
                var loanId = $(this).data('loanid');
                console.log("LoanId:", loanId);

                var loanBalance = $(this).data('loanBalance');
                console.log("LoanBalance:", loanBalance);

                // Obtener el EmployeeId del botón
                var employeeId = $(this).data('bs-target').replace('#abonarModal-', '');
                console.log("EmployeeId:", employeeId);

                // Asignar el LoanId al campo oculto del modal correspondiente
                $('#loanId-' + employeeId).val(loanId);
            });
        });
    </script>

}