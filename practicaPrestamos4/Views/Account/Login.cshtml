@{
    Layout = "_LayoutUnauthenticated";  // Usar el layout para usuarios no autenticados
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2>Iniciar sesión</h2>
    <form method="post" asp-controller="Account" asp-action="Login">
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

        <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
    </form>

    <div class="login-links">
        <a asp-controller="Account" asp-action="Register">Regístrate</a>
        <a asp-controller="Account" asp-action="ForgotPassword">¿Olvidaste tu contraseña?</a>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}