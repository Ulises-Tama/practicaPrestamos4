@{
    ViewData["Title"] = "Reestablecer contraseña";
}

<div class="reset-password-container">
    <h2>Reestablecer contraseña</h2>
    <form method="post" action="/Home/ResetPassword">
        <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="newPassword">Nueva contraseña</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirmar nueva contraseña</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Reestablecer contraseña</button>
    </form>

    <div class="reset-password-links">
        <a href="/Home/ForgotPassword">Volver a olvidé mi contraseña</a>
    </div>
</div>