@{
    Layout = ViewBag.Layout;  // Usar el layout asignado desde el controlador

    ViewData["Title"] = "Olvidé mi contraseña";
}

<div class="forgot-password-container">
    <h2>¿Olvidaste tu contraseña?</h2>
    <form method="post" action="/Home/ResetPassword">
        <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Recuperar contraseña</button>
    </form>

    <div class="forgot-password-links">
        <a asp-controller="Account" asp-action="Login">Volver al login</a>
    </div>
</div>